    EUSCI_A0->TXBUF = 0x5B;       // [
    while (!(EUSCI_A0->IFG & 0x02)){}
    EUSCI_A0->TXBUF = '4';
    while (!(EUSCI_A0->IFG & 0x02)){}
    EUSCI_A0->TXBUF = ';';
